<style lang="scss">
    @use "../styles/index.scss" as *;

    .header-wrapper{
        --height:90px;

        z-index: 999;
        position: fixed;
        top: 0px;
        width: 100%;
        left: 0px;
        display: flex;
        justify-content: center;
    }

    header{
        display: flex;
        width: 100%;
        max-width: $max-width;
        background-color: $dark-red;
        height: var(--height);
        justify-content: space-between;
        box-sizing: border-box;
        padding: 0px 6rem;
        align-items: center;
    }

    .flex-nav{
        display: flex;
        height: 100%;
        align-items: center;
        justify-content: space-evenly;
    }

    .icon-fill{
        fill:white;
    }

    .social ul{
        display: flex;

        li{
            margin-top: 5px;
            transition: scale 0.25s ease-in-out, transform 0.25s ease-in-out;
        }

        li:not(first-child){
            margin-left: 2rem;
        }
        li:hover{
            transform: translate(1px, -3px);
            scale: 1.05;
        }


    }
</style>