<style lang="scss">
    @use "../styles/index.scss" as *;

    section{
        width: 100%;
        height: 100vh;
        background-color: $dark-red;
        position: relative;
        z-index: 1;
        overflow: hidden;
    }

    .background{
        position: absolute;
        right: 0px;
        width: 100%;
        height: 100vh;

        img{
            position: absolute;
            right: 0px;
            bottom: 0px;
        }
    }

    .text-container{
        position: relative;
        z-index: 4;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        flex-direction: column;
        box-sizing: border-box;
        padding: 0px 6rem;

        p{
            max-width: 36ch;
        }
    }


    .image-container {
        position: absolute;
        right: 0px;
        bottom: 0px;
        height: 100%;
        aspect-ratio: 1 / 1;

        img{
            position: absolute;
            bottom: 0px;
            right: 0px;
            height: 90%;
            width: auto;
        }
    }
</style>